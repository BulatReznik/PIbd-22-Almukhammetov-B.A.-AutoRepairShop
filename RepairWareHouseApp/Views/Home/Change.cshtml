@{
    ViewData["Title"] = "Change";
}
<div class="text-center">
    <h2 class="display-4">Изменить склад</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Название склада:</div>
        <div class="col-8"><input type="text" name="wareHouseName" id="wareHouseName" value="@ViewBag.WareHouse.WareHouseName" /></div>
    </div>
    <div class="row">
        <div class="col-4">ФИО ответственного:</div>
        <div class="col-8"><input type="text" name="responsibleName" id="responsibleName" value="@ViewBag.WareHouse.ResponsibleName" /></div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Компонент
                </th>
                <th>
                    Количество
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @ViewBag.WareHouse.WareHouseComponents)
            {
                <tr>
                    <td>
                        @item.Value.Item1
                    </td>
                    <td>
                        @item.Value.Item2
                    </td>
                </tr>
}
        </tbody>
    </table>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Изменить" class="btn btn-primary" /></div>
    </div>
</form>